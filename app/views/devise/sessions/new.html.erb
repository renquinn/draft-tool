<div class="hero-unit span3 center">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "input-block-level" %>

  <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>
  <br><br>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :class => "inline" %> Remember Me<br><br>
  <% end -%>

  <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
