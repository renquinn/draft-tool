<h1>My Teams</h1>

<table class="table table-striped">
  <caption><%= link_to 'New Team', new_team_path %><caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Players Selected</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, team %></td>
      <td>0</td>
      <td><%= link_to 'Delete', team, :method => :delete, :data => { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
