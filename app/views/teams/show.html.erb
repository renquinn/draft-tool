    <li><a href="#tab7-unpicked" data-toggle="tab">DST</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="tab1-unpicked">
      <%= render "players_table", :players => Player.order_by(session[:sort], @unselected), :my_team => false %>
    </div>

