<div class="page-header">
  <h1>League Settings</h1>
  <small><%= link_to 'Edit League Settings', edit_team_setting_path(@team_setting) %></small> |
  <small><%= link_to "Back to #{@team_setting.team.name}", team_path(@team_setting.team) %></small>
</div>

<div class="row-fluid">
